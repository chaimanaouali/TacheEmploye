        <div class="mt-3">
            <a href="{{ path('app_tasks_index') }}" class="btn btn-secondary btn-back">Back to List</a>
        </div>
    </div>

  
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
