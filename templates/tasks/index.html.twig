<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tasks Index</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        .table th, .table td {
            text-align: center;
        }
        .container {
            margin-top: 20px;
        }
        .btn-primary {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="my-4">Tasks Index</h1>

        <!-- Table -->
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Task</th>
                    <th>DateR</th>
                    <th>Etat</th>
                    <th>TypeT</th>
                    <th>Actions</th>
                    <th>User Email</th>
                </tr>
            </thead>
            <tbody>
            {% for task in tasks %}
                <tr>
                    <td>{{ task.id }}</td>
                    <td>{{ task.task }}</td>
                    <td>{{ task.dateR ? task.dateR|date('Y-m-d') : 'N/A' }}</td>
                    <td>{{ task.etat }}</td>
                    <td>{{ task.typeT }}</td>
                    <td>
                        <a href="{{ path('app_tasks_show', {'id': task.id}) }}" class="btn btn-info btn-sm">Show</a>
                        <a href="{{ path('app_tasks_edit', {'id': task.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                    <td>{{ task.user ? task.user.email : 'No User' }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_tasks_new') }}" class="btn btn-primary">Create New Task</a>
        {% endif %}
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
